#! /bin/sh
#
# Twelf Batch File Creator
#
# Arguments:
# $1 = PolyML executable
# $2 = Twelf root directory
# $3 = Name of executable and database (e.g. twelf-polyml, twelf-server-polyml)
# $4 = Name of database (e.g. twelf-polyml, twelf-server-polyml)
cat > "$2/bin/$4" <<EOF
#! /bin/sh
exec "$1" -r "$2/bin/.dbase/$3"
EOF
chmod a+x "$2/bin/$4"
