#!/bin/sh
#
# generate build id (revision and date) as SML code
#
# William Lovas, 08-27-2010
#

REV=`svnversion`
DATE=`date "+%m/%d/%y at %H:%M:%S"`
HOST=`hostname`

cat <<EOF
(************************************************************)
(* auto-generated by "make buildid" -- do not edit by hand! *)
(************************************************************)

structure BuildId =
struct

val revision = "$REV"
val date = "$DATE"
val hostname = "$HOST"

end
EOF
